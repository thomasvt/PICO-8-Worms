-- world

-- world size in cells
grd_w = 32 -- grid width
grd_h = 16 -- grid height
 
-- world size in pxls
wrld_w = grd_w * 8
wrld_h = grd_h * 8

stride = wrld_w / 2

-- copy destructible world
-- in mem from map
function w_gen()
 memset(0x8000,0,stride * wrld_h)
 -- copy map to mem
 for ty = 0,grd_h-1 do
 	for tx = 0,grd_w-1 do
 	
 	 local offs_x = tx<<2
 	 local offs_y = ty<<3
 	 
 		local t = mget(tx,ty)
 		
 		-- copy tile pxls to mem
 		for y = 0,7 do
 		 local d = 0x8000
 		  + (offs_y+y) * stride
 		  + offs_x
 		 local spr_addr = 
 		 	64 * (y+t\2) + 4 * (t%16)
 		 memcpy(d, spr_addr, 4)
 		end
 	end
 end
end

function w_draw()

 -- cull y:
 local y0 = cam_y
 local y1 = cam_y+127
 if y0 >= wrld_h or y1 < 0 then return end
 if y0 < 0 then y0 = 0 end
 if y1 >= wrld_h then y1 = wrld_h-1 end

 -- cull x:
 local cam_x_corr = cam_x \ 2 * 2
 local x0 = cam_x_corr
 local x1 = x0 + 127
 if x0 >= wrld_w or x1 < 0 then return end
 if x0 < 0 then x0 = 0 end
 if x1 >= wrld_w then x1 = wrld_w-1 end
 
 local bytecount = (x1-x0+1)\2
 local wrld_x_offset = x0 \ 2
 local scr_x_offset = (x0-cam_x_corr) \ 2
 
 -- render world pixels
	for y = y0,y1 do
	 memcpy(0x6000+((y-cam_y)<<6)+scr_x_offset,
	        0x8000+(y<<7)+wrld_x_offset,
	        bytecount)	 
	end
end
